@{
    ViewBag.Title = "Home Page";
}

<div id="welcome">
    <div id="welcomeTitle" class="panel-title">
        <h1>Welcome to the NEMESIS project</h1>
    </div>
    <div id="welcomeBody" class="panel-body">
        <p>This is a simple federated ecommerce site linking users to local convenience stores where they can order products.</p>
        <p>An Uber-like network of delivery drivers is then used to deliver the goods to end-users.</p>
    </div>
    <div id="welcomeSearch" class="panel-body, jumbotron">
        @using (Html.BeginForm("Welcome", "Home", FormMethod.Post, new { id = "form1" }))
        {
            <p>
                <label>My postcode is... @Html.TextBox("PostcodeSearchValue")</label>
                <label>I'm looking for... @Html.TextBox("ProductSearchValue")</label>
                <input type="submit" value="Search" />
            </p>
        }        
    </div>
    <div>
        <p>@Html.ActionLink("View all stores", "List", "Store")</p>
    </div>
</div>
